<h3><%= @merchant.name %></h3>

<div id="merchants_items">
  <% @items.each do |item| %>
    <div id="merchants_items-<%= item.id %>">
      <p><%= link_to item.name, merchant_item_path(@merchant, item) %>  Status: <%= item.status %></p>
      <% if item.status == "enabled" %>
        <%= button_to "Disable Item", disable_merchant_item_path(@merchant, item), method: :patch, remote: true, data: { turbo_action: "replace", turbo_frame: "merchants_items-#{item.id}" } %>
      <% else %>
        <%= button_to "Enable Item", enable_merchant_item_path(@merchant, item), method: :patch, remote: true, data: { turbo_action: "replace", turbo_frame: "merchants_items-#{item.id}" } %>
      <% end %>
    </div>
  <% end %>
</div>

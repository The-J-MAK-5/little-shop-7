<h1>Update Item</h1>
<%= form_with model: @merchant.items.find(params[:id]),
    url: merchant_item_path(@merchant, @merchant.items.find(params[:id])),
    local: true do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :unit_price %>
  <%= f.text_field :unit_price %>

  <%= f.submit %>
<% end %>
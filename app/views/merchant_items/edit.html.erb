<h1>Update Item</h1>
<%= form_with model: @item, url: "/merchants/#{@merchant.id}/items/#{@item.id}", local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :unit_price %>
  <%= f.text_field :unit_price %>

  <%= f.submit %>
<% end %>
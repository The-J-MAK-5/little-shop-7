<h1><%= @merchant.name %></h1>

<%= link_to "Items", merchant_items_path(@merchant) %><br/><br/>
<%= link_to "Invoices", merchant_invoices_path(@merchant) %>


<h2> Top 5 Customers </h2>
<div id="top5">
    <% @customers.each do |customer| %>
      <p> <%= "#{customer.first_name} #{customer.last_name} - #{customer.successful_transactions_count} successful transactions" %> </p>
    <% end %>
</div>
<div id="ItemsReadyShip">
<h2> Items that Need to Ship </h2>
<% @merchant.items_ready_to_ship.each do |item| %>
  <p> <%= "#{item.name}" %> </p>
<% end %>
</div>